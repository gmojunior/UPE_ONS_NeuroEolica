unit Sobre;

interface

uses WinTypes, WinProcs, Classes, Graphics, Forms,
  Controls, Buttons, StdCtrls, ExtCtrls;

type
  TCaixaSobre = class(TForm)
    BitBtn1: TBitBtn;
    Panel1: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    PaintBox1: TPaintBox;
    Label3: TLabel;
    procedure Label1MouseDown(Sender: TObject; Button: TMouseButton;
      Shift: TShiftState; X, Y: Integer);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  CaixaSobre: TCaixaSobre;

implementation

{$R *.DFM}

procedure TCaixaSobre.Label1MouseDown(Sender: TObject;
  Button: TMouseButton;
  Shift: TShiftState; X, Y: Integer);
var
  I: Integer;
begin
  if (Button = mbRight) and (ssShift in Shift) then
  begin
    Panel1.Visible := False;
    for I := 0 to 600 do
      with PaintBox1.Canvas do
      begin
        Font.Name := 'Arial';
        Font.Size := 20;
        TextOut (40, 100-I, 'Exemplo de CREDITOS de:');
        TextOut (40, 150-I, '');
        TextOut (40, 200-I, '"MODELOS DE PREVISÃO "');
        TextOut (40, 250-I, '');
        TextOut (40, 300-I, 'Autor: MEUSER VALENÇA');
        TextOut (40, 350-I, 'TESE: UFPE');
        TextOut (40, 400-I, '');
        TextOut (40, 450-I, 'Dedicado com amor');
        TextOut (40, 500-I, 'à minha esposa, CLORIS');
        {permita que outras aplicações trabalhem}
        Application.ProcessMessages;
      end;
    Panel1.Visible := True;
  end;
end;

end.

